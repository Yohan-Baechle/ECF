<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="600.0" prefWidth="600.0" stylesheets="@../../styles/global.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yb.sparadrap.controller.MutualFormController">

    <content>
        <VBox>
            <GridPane hgap="10" vgap="10">
                <!-- Informations générales -->
                <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" />
                <Label fx:id="nameErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Adresse :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="streetField" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS" />
                <Label fx:id="streetErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Code Postal :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="zipCodeField" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.hgrow="ALWAYS" />
                <Label fx:id="zipCodeErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Ville :" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.hgrow="ALWAYS" />
                <Label fx:id="cityErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                <Label text="Département :" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <ComboBox fx:id="departmentComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                <Label fx:id="departmentErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="9" />

                <Label text="Téléphone :" GridPane.columnIndex="0" GridPane.rowIndex="10" />
                <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="10" GridPane.hgrow="ALWAYS" />
                <Label fx:id="phoneNumberErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="11" />

                <Label text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="12" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="12" GridPane.hgrow="ALWAYS" />
                <Label fx:id="emailErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="13" />

                <Label text="Taux de remboursement :" GridPane.columnIndex="0" GridPane.rowIndex="14" />
                <TextField fx:id="reimbursementRateField" GridPane.columnIndex="1" GridPane.rowIndex="14" />
                <Label fx:id="reimbursementRateErrorLabel" styleClass="error-label" GridPane.columnIndex="1" GridPane.rowIndex="15" />
            </GridPane>
        </VBox>
    </content>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</DialogPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="800" prefWidth="920" styleClass="main-container"
            stylesheets="@../../styles/global.css" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.yb.sparadrap.controller.MedicationController">

    <!-- Titre de la page -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.topAnchor="40.0">
        <FontIcon iconLiteral="fas-pills" iconSize="24"/>
        <Text styleClass="page-title" text="Gestion des médicaments"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="addMedicationBtn" onAction="#handleAddMedication" prefWidth="120.0" styleClass="button-success"
                text="Nouveau">
            <graphic>
                <FontIcon iconLiteral="fas-plus" iconSize="20"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Barre de recherche en haut -->
    <HBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
          AnchorPane.topAnchor="110.0">
        <TextField fx:id="searchField" promptText="Rechercher un médicament..." styleClass="search-bar"
                   HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- TableView pour les médicaments au centre -->
    <TableView fx:id="medicationTable" layoutX="20.0" layoutY="130.0" prefHeight="560.0" prefWidth="860.0"
               AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
               AnchorPane.topAnchor="160.0">
        <columns>
            <TableColumn fx:id="nameColumn" text="Nom"/>
            <TableColumn fx:id="categoryColumn" text="Catégorie"/>
            <TableColumn fx:id="launchDateColumn" text="Date de mise en service"/>
            <TableColumn fx:id="quantityColumn" text="Quantité"/>
            <TableColumn fx:id="priceColumn" text="Prix"/>
            <TableColumn fx:id="actionColumn" text="Actions"/>
        </columns>
    </TableView>

    <!-- Étiquette de statut en bas -->
    <Label fx:id="statusLabel" layoutX="20.0" layoutY="710.0" prefHeight="60.0" prefWidth="880.0"
           AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"/>

</AnchorPane>

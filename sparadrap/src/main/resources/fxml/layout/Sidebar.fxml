<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="800" prefWidth="280.0" styleClass="main-menu-container" stylesheets="@../../styles/sidebar.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yb.sparadrap.controller.SidebarController">

    <!-- Conteneur principal pour tout le menu latéral -->
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox prefHeight="80.0">
            <HBox prefHeight="100.0" prefWidth="200.0" styleClass="title-container">
                <FontIcon iconLiteral="fas-band-aid" iconSize="48" />
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SPARADRAP" />
            </HBox>
            <HBox layoutX="10.0" layoutY="10.0" styleClass="subtitle-container">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tableau de bord pharmacie" />
            </HBox>
        </VBox>

        <!-- Section de navigation pour les différentes vues -->
        <VBox styleClass="menu-container">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="NAVIGATION">
            <VBox.margin>
               <Insets left="20.0" />
            </VBox.margin>
         </Text>
            <Button fx:id="purchaseBtn" layoutX="30.0" layoutY="175.0" maxWidth="Infinity" mnemonicParsing="false" text="Achats">
                <graphic>
                    <FontIcon iconLiteral="fas-shopping-cart" iconSize="24" />
                </graphic>
            </Button>
         <Line endX="240.0" layoutX="31.0" layoutY="105.0" styleClass="separator" />
         <Button fx:id="customerBtn" layoutX="30.0" layoutY="99.0" maxWidth="Infinity" mnemonicParsing="false" text="Clients">
            <graphic>
               <FontIcon iconLiteral="fas-users" iconSize="24" />
            </graphic>
         </Button>
         <Line endX="240.0" layoutX="31.0" layoutY="164.0" styleClass="separator" />
         <Button fx:id="doctorBtn" layoutX="30.0" layoutY="174.0" maxWidth="Infinity" mnemonicParsing="false" text="Médecins">
            <graphic>
               <FontIcon iconLiteral="fas-user-md" iconSize="24" />
            </graphic>
         </Button>
         <Line endX="240.0" styleClass="separator" />
         <Button fx:id="medicationBtn" maxWidth="Infinity" mnemonicParsing="false" text="Médicaments">
            <graphic>
               <FontIcon iconLiteral="fas-pills" iconSize="24" />
            </graphic>
         </Button>
        </VBox>
    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="800" prefWidth="920" styleClass="main-container" stylesheets="@../../styles/global.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yb.sparadrap.controller.PurchaseController">

    <!-- Titre de la page -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="40.0">
        <FontIcon iconLiteral="fas-shopping-cart" iconSize="24" />
        <Text styleClass="page-title" text="Gestion des achats" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="addPurchaseBtn" onAction="#handleAddPurchase" prefWidth="120.0" styleClass="button-success" text="Nouveau">
            <graphic>
                <FontIcon iconLiteral="fas-cart-plus" iconSize="20" />
            </graphic>
        </Button>
    </HBox>

    <!-- Barre de recherche en haut -->
    <HBox alignment="CENTER" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="110.0">
        <TextField fx:id="searchField" promptText="Rechercher un client..." styleClass="search-bar" HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- TableView pour les clients au centre -->
    <TableView fx:id="purchaseTable" layoutX="20.0" layoutY="130.0" prefHeight="560.0" prefWidth="860.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="160.0">
        <columns>
            <TableColumn fx:id="medicationColumn" text="Médicament" />
            <TableColumn fx:id="medicationCategoryColumn" text="Catégorie" />
            <TableColumn fx:id="quantityColumn" text="Quantité" />
            <TableColumn fx:id="unitPriceColumn" text="Prix unitaire" />
            <TableColumn fx:id="purchaseDateColumn" text="Date d'achat" />
            <TableColumn fx:id="totalPriceColumn" text="Prix total" />
            <TableColumn fx:id="actionColumn" text="Actions" />
        </columns>
    </TableView>

    <!-- Étiquette de statut en bas -->
    <Label fx:id="statusLabel" layoutX="20.0" layoutY="710.0" prefHeight="60.0" prefWidth="880.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />

</AnchorPane>
